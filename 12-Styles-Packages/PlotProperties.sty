	%
	% >>> G L O B A L   LEGEND SETTINGS:
	legend style={draw=none,fill=none,legend cell align=left},
	%
	% >>> G L O B A L   MARKER SETTINGS (only if the markers defined above are not used):
	every mark/.append style={scale=0.8},
	%
	% >>> G L O B A L   SETTINGS FOR ALL TYPES OF AXIS:
	every axis/.append style={ % Einstellung für Achsen in Diagrammen
		width=\fwidthDef, 
		height=0.65*\fwidthDef, 
		scale only axis,
		minor y tick num=1,
		scaled ticks=false,  	% Use eg 0.001 instead of 10^-3
		ymajorgrids=false, 		% keine Gitternetzlinien
		yminorgrids=false,
		xmajorgrids=false,
		xminorgrids=false, 
	},
 	%
	% >>> S P E C I F I C   SETTINGS FOR SEMILOGX AXIS:
	every semilogx axis/.append style={
		xticklabel style={/pgf/number format/fixed,/pgf/number format/precision=0,rotate=0},%Anzahl der Nachkommastellen
		xlabel= \acs{f} in \si{\Hz}, %To Do Sprache
		xtick={31.5,63,125,250,500,1000,2000,4000,8000},
		minor xtick={20,25,40,50,80,100,160,200,315,400,630,800,1250,1600,2500,3150,5000,6300},
